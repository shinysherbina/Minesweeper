<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minesweeper</title>
    <!-- Stylesheet relative to public folder -->
    <link rel="stylesheet" href="style/styles.css"/>
</head>
<body>
    <h1>Minesweeper</h1>
    <% if (locals.res){ %>
        <% var res = JSON.parse (res) %>
        <h2>Total mines :  <%= res.mines %></h2>
        
        <% console.log(res.board , res.mines) %>
                        
        <% for (var i=0; i <res.height ; i++){ %>
            <% for (var j=0; j<res.width ; j++) {%>
                <div type ="button" class = "box" id =<%= i*10 + j %> oncontextmenu="event.preventDefault();" >
                    <%= res.board[i][j] %>
                </div>
            <% } %>
            <br>
        <% } %>
   <% } %>
   
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

    <!--Javascript -->
    <script type="text/javascript" charset="utf-8">

        let flag = 0; // flag to check if the box is flagged or not (right click)

        // eventhandler to capture the type of click in each box
        $(".box").on("mouseup",function(event){
            
            console.log(this, this.innerHTML);
            console.log(event.button);
           
            switch(event.button){
                case 0:
                    if (flag == 0){                           // display number only when the box is not flagged
                        $("#"+this.id).addClass("pressed");
                    }
                    break;
                case 2:
                    console.log("inside 2");
                    console.log(flag);
                    if (flag == 0){                            // if box is not already flagged add flag
                        $("#"+this.id).addClass("flag");     
                        flag = 1;
                    }else{
                        $("#"+this.id).removeClass("flag");   // if the box is already flagged remove the flag
                        flag = 0;
                    }
                    break;
            }
        });


    </script>
</body>
</html>